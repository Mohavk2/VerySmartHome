<Window x:Class="SmartBulbColor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmartBulbColor.ViewModels"
        xmlns:views="clr-namespace:SmartBulbColor.Views"
        mc:Ignorable="d"
        Title="SmartBulbColor" Icon="pack://application:,,,/Resources/AppIcon.ico" Height="828" Width="520">
    <Window.DataContext>
        <local:MainWindowViewModel></local:MainWindowViewModel>
    </Window.DataContext>
    <Window.Background>
        <ImageBrush ImageSource="/SmartBulbColor;component/Resources/Background.jpg"/>
    </Window.Background>
    <Window.Resources>
        <Style TargetType="ListBox">
            <Setter Property="Control.Background" Value="Black"/>
            <Setter Property="Control.FontSize" Value="14"/>
            <Setter Property="Control.FontWeight" Value="Bold"/>
            <Setter Property="Control.Foreground" Value="#FF0035E8"/>
        </Style>
        <DataTemplate x:Key="Item">
            <StackPanel Orientation="Vertical" MinWidth="150">
                <views:ColorBulbPanel x:Name="BulbPanel"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="ItemSelected">
            <StackPanel Orientation="Vertical" MinWidth="150">
                <views:ColorBulbPanel x:Name="BulbPanel"/>
            </StackPanel>
        </DataTemplate>
        <Style TargetType="{x:Type ListBoxItem}" x:Key="ListItemStyle">
            <Setter Property="ContentTemplate" Value="{StaticResource Item}"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="ContentTemplate" Value="{StaticResource ItemSelected}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <TabControl x:Name="Tools" VerticalAlignment="Top" Margin="0,0,0,-2">
        <TabItem x:Name="AllBulbs">
            <TabItem.Header>
                <TextBlock>All bulbs</TextBlock>
            </TabItem.Header>
            <TabItem.Content>
                <StackPanel>
                    <ListBox x:Name="BulbList" ItemContainerStyle="{StaticResource ListItemStyle}"                            
                             ItemsSource="{Binding ColorBulbsVM}" SelectedItem="{Binding SelectedBulbVM}"             
                             FontSize="16" FontWeight="Bold" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                    </ListBox>
                </StackPanel>
            </TabItem.Content>
        </TabItem>
    </TabControl>
</Window>
