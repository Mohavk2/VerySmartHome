<Window x:Class="VerySmartHome.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VerySmartHome"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="Resources/Background.jpg"/>
    </Window.Background>
    <Window.Resources>
        <Style x:Key="MainButtonStyle">
            <Setter Property="Control.Background" Value="Black"/>
            <Setter Property="Control.Width" Value="166"/>
            <Setter Property="Control.Height" Value="44"/>
            <Setter Property="Control.FontSize" Value="16"/>
            <Setter Property="Control.FontWeight" Value="Bold"/>
            <Setter Property="Control.Foreground" Value="#FF00F92D"/>
        </Style>
    </Window.Resources>
    <Grid>
        <TextBlock Name="MainConsole" HorizontalAlignment="Left" Margin="171,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="399" Width="611" FontSize="16" Background="Black" Foreground="#FF0035E8"/>
        <Button Style="{StaticResource MainButtonStyle}" Content="Find Devices" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10,0,0" Click="Button_Click"/>
    </Grid>
</Window>
